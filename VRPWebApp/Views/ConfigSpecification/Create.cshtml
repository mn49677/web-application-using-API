@model VRPWebApp.Models.ConfigSpecification

@{
    ViewData["Title"] = "Create";
    //Layout = "_Layout.cshtml";
}

    <div class="row justify-content-center">
        <h3> Odaberi detalje izračuna</h3>
        <div class="col-md-4">
            <form method="post" asp-controller="ConfigSpecification" asp-action="Create">
                <div class="form-group">
                    Haversine: @Html.RadioButton("AlgorithmMode", 0)
                    Mixed:@Html.RadioButton("AlgorithmMode", 1)
                    ARCGis: @Html.RadioButton("AlgorithmMode", 2)
                </div>
                <br>
                <div class="form-group">
                    <label class="control-label">Time limit:</label>
                    <input class="form-control" name="timeLimit" />                   
                </div>
                <div class="form-group">
                    <label class="control-label">Solution limit:</label>
                    <input class="form-control" name="solutionLimit" />                   
                </div>
                <div class="form-group">
                    <label class="control-label">Data index:</label>
                    <input class="form-control" name="dataIndex" />                   
                </div>
                <br />
                <div class="form-group" align="left">
                    <input type="submit" value="Odaberi specifikacije" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>